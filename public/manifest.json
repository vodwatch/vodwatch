{
  "name": "vodwatch",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Hello World"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*", 
          "https://www.youtube.com/*", 
          "https://play.hbomax.com/*", 
          "https://www.disneyplus.com/*",
          "https://www.primevideo.com/*"],
      "js": ["content.js"]
    }
  ]
}
