{
  "name": "vodwatch",
  "version": "0.0.1",
  "description": "Watch videos from VOD services together!",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Vodwatch"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*",
          "https://www.youtube.com/*",
          "https://play.hbomax.com/*"],
      "js": ["content.js"]
    }
  ]
}
